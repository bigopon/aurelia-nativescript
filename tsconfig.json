{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "allowJs": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "lib": [
      "es2017"
    ],
    "paths": {
      "*": [
        "*",
        "node_modules"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "aurelia_project"
  ]
}
